<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/margin"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="none"
        android:layout_marginBottom="30dp"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:columnCount="5"
        android:rowCount="3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            android:id="@+id/digit_button_1" />

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            android:id="@+id/digit_button_2" />

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            android:id="@+id/digit_button_3"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="4"
            android:id="@+id/digit_button_4"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="5"
            android:id="@+id/digit_button_5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="6"
            android:id="@+id/digit_button_6"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="7"
            android:id="@+id/digit_button_7"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="8"
            android:id="@+id/digit_button_8"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="9"
            android:id="@+id/digit_button_9"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:text="0"
            android:id="@+id/digit_button_0"/>

        <ImageButton
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@mipmap/call_round"
            android:id="@+id/call_button"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="*"
            android:id="@+id/digit_button_star"/>

        <ImageButton
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:src="@mipmap/backspace_round"
            android:id="@+id/backspace_button"/>

        <Button
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:text="#"
            android:id="@+id/digit_button_hashtag"/>

        <ImageButton
            style="@style/buttonMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@mipmap/hangup_round"
            android:id="@+id/hangup_button"/>
    </GridLayout>

</LinearLayout>