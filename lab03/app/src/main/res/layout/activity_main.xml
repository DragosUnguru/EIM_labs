    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="phone"
        android:layout_marginBottom="30dp"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_gravity="center"
        android:rowCount="6">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/backspace_round"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginBottom="20dp"
            android:background="@null"
            android:id="@+id/backspace_button"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="1"
            android:id="@+id/digit_button_1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            style="@style/buttonMargin"
            android:text="2"
            android:id="@+id/digit_button_2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="3"
            android:id="@+id/digit_button_3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="4"
            android:id="@+id/digit_button_4"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            style="@style/buttonMargin"
            android:text="5"
            android:id="@+id/digit_button_5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="6"
            android:id="@+id/digit_button_6"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="7"
            android:id="@+id/digit_button_7"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            style="@style/buttonMargin"
            android:text="8"
            android:id="@+id/digit_button_8"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="9"
            android:id="@+id/digit_button_9"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="*"
            android:id="@+id/digit_button_star"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            style="@style/buttonMargin"
            android:text="0"
            android:id="@+id/digit_button_0"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="#"
            android:id="@+id/digit_button_hashtag"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/call_round"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:id="@+id/call_button"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hangup_round"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:id="@+id/hangup_button"
            />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/contacts"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:id="@+id/contacts_button"
            />
    </LinearLayout>

